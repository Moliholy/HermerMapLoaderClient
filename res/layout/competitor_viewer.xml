<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/competitor_viewer_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/abs__bright_foreground_holo_dark"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/competitor_viewer_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/event_viewer_content_description"
        android:src="@drawable/unknown_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/competitor_viewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/competitor_viewer_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</LinearLayout>